<!DOCTYPE html>
<html lang="en">
	
	<!-- @import "includes/doc-head.kit" -->
	
	<body>
		
		<div class="componentLibrary">
			
			<nav class="componentLibrary-nav">
				<ul>
					<li><a href="#button">Button</a></li>
					<ul>
						<p>Forms</p>
						<li><a href="#form-input">Input</a></li>
						<li><a href="#form-select">Select</a></li>
						<li><a href="#form-checkbox">Checkbox</a></li>
						<li><a href="#form-radio">Radio</a></li>
					</ul>
				</ul>
			</nav>
			
			<div class="componentLibrary-content">
		
				<!-- =========================================
				     BUTTON 
						 ========================================= -->
				<div class="component">
					<h2 id="button">Button</h2>
					<div class="component-variant">
						<h3 class="component-variant-title">
							<span>Default</span>
							<pre>.button</pre>
						</h3>
						<div>
							<a href="" class="button"><span>Button</span></a>
							<button class="button"><span>Button</span></button>
						</div>
					</div>
					<div class="component-variant">
						<h3 class="component-variant-title">
							<span>Large</span>
							<pre>.button.m_large</pre>
						</h3>
						<div>
							<a href="" class="button m_large"><span>Button</span></a>
							<button class="button m_large"><span>Button</span></button>
						</div>
					</div>
					<div class="component-variant">
						<h3 class="component-variant-title">
							<span>Small</span>
							<pre>.button.m_small</pre>
						</h3>
						<div>
							<a href="" class="button m_small"><span>Button</span></a>
							<button class="button m_small"><span>Button</span></button>
						</div>
					</div>
					<div class="component-variant">
						<h3 class="component-variant-title">
							<span>Extra Small</span>
							<pre>.button.m_xsmall</pre>
						</h3>
						<div>
							<a href="" class="button m_xsmall"><span>Button</span></a>
							<button class="button m_xsmall"><span>Button</span></button>
						</div>
					</div>
					<div class="component-variant">
						<h3 class="component-variant-title">
							<span>With Icon</span>
						</h3>
						<div>
							<a href="" class="button">
								<svg><use xlink:href="/assets/images/icon-master.svg#icon-user"></use></svg>
								<span>With Icon</span>
							</a>
							<button class="button">
								<svg><use xlink:href="/assets/images/icon-master.svg#icon-user"></use></svg>
								<span>With Icon</span>
							</button>
						</div>
					</div>
					<div class="component-variant">
						<h3 class="component-variant-title">
							<span>Uppercase</span>
							<pre>.button.u_uppercase</pre>
						</h3>
						<div>
							<a href="" class="button u_uppercase"><span>Uppercase</span></a>
							<button class="button u_uppercase"><span>Uppercase</span></button>
						</div>
					</div>
				</div>
		
				<!-- =========================================
				     FORM : INPUT
						 ========================================= -->
				<div class="component">
					<h2 id="form-input">Form : Input</h2>
					<div class="component-variant">
						<h3 class="component-variant-title">
							<span>Input</span>
						</h3>
						<div>
							<label for="1">Input text</label>
							<input  id="1" type="text" value="" placeholder="" />
						</div>
						<div>
							<label for="2">Input required</label>
							<input  id="2" type="text" value="" placeholder="" required />
						</div>
						<div>
							<label for="3">Input with value</label>
							<input  id="3" type="text" value="With value" placeholder="" />
						</div>
						<div>
							<label for="4">Input with placeholder</label>
							<input  id="4" type="text" value="" placeholder="With placeholder" />
						</div>
						<div>
							<label for="5">Input disabled</label>
							<input  id="5" type="text" value="" placeholder="" disabled />
						</div>
						<div>
							<label for="6">Input password</label>
							<input  id="6" type="email" value="" placeholder="" />
						</div>
						<div>
							<label for="7">Input email</label>
							<input  id="7" type="email" value="" placeholder="" />
						</div>
						<div>
							<label for="7">Input number</label>
							<input  id="7" type="number" value="" placeholder="" />
						</div>
						<div>
							<label for="7">Input tel</label>
							<input  id="7" type="tel" value="" placeholder="" />
						</div>
						<div>
							<label for="7">Input url</label>
							<input  id="7" type="url" value="" placeholder="" />
						</div>
					</div>
				</div>
		
				<!-- =========================================
				     FORM : SELECT
						 ========================================= -->
				<div class="component">
					<h2 id="form-input">Form : Select</h2>
					<div class="component-variant">
						<h3 class="component-variant-title">
							<span>Select</span>
						</h3>
						<div>
							<label for="8">Select</label>
							<select  id="8" />
								<option value="one">Option one</option>
								<option value="two">Option two</option>
								<option value="three">Option three</option>
								<option value="four">Option four</option>
								<option value="five">Option five</option>
							</select>
						</div>
					</div>
				</div>
		
				<!-- =========================================
				      
						 ========================================= -->
				<div class="component">
					<h2 id="button"></h2>
					<div class="component-variant">
						<h3 class="component-variant-title"></h3>
						<pre class="component-code">.</pre>
						<div>
							
						</div>
					</div>
				</div>
				
			</div>
		
		<!-- @import "includes/js-footer.kit" -->
		
	</body>
	
</html>